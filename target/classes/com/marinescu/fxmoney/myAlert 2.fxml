<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<!-- This file displays an alert box. -->
<HBox fx:id="box" alignment="CENTER_LEFT" prefHeight="44.0" prefWidth="453.0" spacing="30.0" style="-fx-border-color: transparent;" stylesheets="@styles/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marinescu.fxmoney.MyAlert">
   <children>
      <Label fx:id="message" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="350.0" />
      <Button fx:id="btn" onAction="#close" defaultButton="true" focusTraversable="false" mnemonicParsing="false" style="-fx-background-color: transparent;" text="x">
         <font>
            <Font name="Times New Roman Bold" size="18.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets left="20.0" right="20.0" />
   </padding>
</HBox>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<!-- This file displays a pie chart. -->
<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marinescu.fxmoney.PieChart">
   <children>
      <PieChart fx:id="pieChart" legendVisible="false" prefHeight="400.0">
         <VBox.margin>
            <Insets right="50.0" />
         </VBox.margin></PieChart>
      <Label fx:id="percentLabel" />
   </children>
</VBox>

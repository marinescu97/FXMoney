    <top>
        <HBox fx:id="mainStageHBox" alignment="CENTER_RIGHT" prefHeight="40.0" spacing="30.0" BorderPane.alignment="CENTER">
            <children>
                <ComboBox fx:id="chartsBox" prefWidth="150.0" visible="false">
               <effect>
                  <DropShadow />
               </effect></ComboBox>
                <Label fx:id="labelDateTime" layoutX="700.0" layoutY="35.0" style="-fx-text-fill: #077369;">
                    <font>
                        <Font name="Times New Roman Bold" size="24.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets right="30.0" />
            </padding>
        </HBox>
    </top>
    <left>
    </left>
    <center>

    </center>
    <padding>
        <Insets bottom="10.0" top="5.0" />
    </padding>
</BorderPane>

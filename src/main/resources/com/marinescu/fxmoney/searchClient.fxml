<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- This file shows a client search form. -->
<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXButton?>
<VBox alignment="CENTER"
      stylesheets="@styles/style.css"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.marinescu.fxmoney.SearchClient"
      prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label styleClass="title" text="Search for a client">
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </Label>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Label text="PIN" />
                <TextField fx:id="pinField" />
            </children>
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
        </HBox>
        <JFXButton fx:id="searchBtn" onAction="#searchBtnHandler" onKeyPressed="#searchBtnHandler" text="Search">
            <VBox.margin>
                <Insets bottom="20.0" top="40.0" />
            </VBox.margin>
        </JFXButton>
    </children>
</VBox>
